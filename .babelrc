{
  "presets": [
    [
      "env",
      {
        "test": {
          "modules": "commonjs"
        },
        "development": {
          "modules": false
        },
        "production": {
          "modules": false
        },
        "targets": {
          "browsers": [
            "> 1%",
            "last 2 firefox versions",
            "last 2 chrome versions",
            "last 2 safari versions",
            "edge 15-16",
            "ie 11"
          ],
          "uglify": true
        },
        "useBuiltIns": true
      }
    ],
    "react"
  ],
  "plugins": [
    "lodash",
    "syntax-dynamic-import",
    "transform-decorators-legacy",
    "transform-object-rest-spread",
    "transform-class-properties",
    ["module-resolver", {
      "extensions": [".js", ".jsx", ".ts", ".tsx"],
      "alias": {
        "~stylesheets": "./app/assets/stylesheets",
        "~images": "./app/assets/images",
        "~helpers": "./__tests__/helpers",
        "~fonts": "./app/assets/fonts",
        "~": "./app/javascript",
        "^~(.+)": "./app/javascript/src/\\1",
        "#": "./__js_test_config"
      }
    }],
    ["react-intl", {
      "messagesDir": "./build/messages/"
    }],
    ["transform-runtime", {
      "helpers": false,
      "polyfill": false,
      "regenerator": true
    }],
    [
      "transform-class-properties",
      {
        "spec": true
      }
    ]
  ],
  "env": {
    "development": {
      "plugins": "babel-plugin-styled-components"
    },
    "production": {
      "plugins": [
        "lodash",
        ["styled-components", {
          "displayName": false
        }]
      ]
    }
  }
}
